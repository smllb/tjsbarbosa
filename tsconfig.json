{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["./*"] 
    }
    
  },
  "include": ["./**/*", "./*", "types.d.ts"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}